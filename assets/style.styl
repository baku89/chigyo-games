@import './include.styl'

:root
	-webkit-text-size-adjust 100%
	interpolate-size allow-keywords
	--color-bg rgb(173, 173, 173)
	--color-text rgb(0, 0, 51)
	--color-primary #E2FF00
	--max-width 960px
	--input-height calc(max(4rem, 48px))

*, &::before, &::after
	-webkit-appearance none
	appearance none
	box-sizing border-box
	margin 0
	padding 0
	text-indent 0
	color inherit
	font-size inherit
	font-weight inherit
	font-family inherit
	line-height inherit
	outline none
	text-decoration none
	background none
	border none
	list-style none

::selection
	background var(--color-text)
	color var(--color-bg)

html
	color var(--color-text)
	font-family 'Zen Kaku Gothic New', sans-serif
	font-size calc(min(2vw, var(--max-width) * 0.02))

with-alpha($color, $alpha)
	unquote('color-mix(in hsl, ' + $color + ' ' + ($alpha * 100) + '%, transparent)')

strong
	font-weight bold

button
	cursor pointer

main-wrapper()
	padding 1rem
	width calc(min(100vw, var(--max-width)))
	overflow hidden
	position relative
	background var(--color-bg)
