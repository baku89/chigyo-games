@import './include.styl'

:root
	-webkit-text-size-adjust 100%
	interpolate-size allow-keywords
	--color-bg rgb(173, 173, 173)
	--color-text rgb(0, 0, 51)
	--color-primary #E2FF00

*, &::before, &::after
	-webkit-appearance none
	appearance none
	box-sizing border-box
	margin 0
	padding 0
	text-indent 0
	color inherit
	font-size inherit
	font-weight inherit
	font-family inherit
	line-height inherit
	outline none
	text-decoration none
	background none
	border none
	list-style none

::selection
	background var(--color-text)
	color var(--color-bg)

html
	font-size 2vw

body
	font-family sans-serif
	color var(--color-text)
	background var(--color-bg)